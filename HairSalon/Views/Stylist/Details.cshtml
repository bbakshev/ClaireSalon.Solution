@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>

<hr />

<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>

@if (@Model.Clients.Count == 0)
{
    <h3>No clients have been added for this stylist yet!</h3>
}
else
{
    <ul>
    @foreach (Client client in Model.Clients)
    {
        <li>@Html.ActionLink($"{client.Name}", "Details", "Client", new { id = client.ClientId })</li>
    }
  </ul>
}

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StylistId })
    @Html.ActionLink("Delete", "Delete", new { id = Model.StylistId })
    @Html.ActionLink("Back to List", "Index")
</div>