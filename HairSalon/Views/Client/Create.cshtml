@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<p>Add a new client</p>
<p><strong>NOTE:</strong> You need to have at least one stylist before you can add a cleint!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylist") to add a new Stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)

  @Html.LabelFor(model => model.Email)
  @Html.TextBoxFor(model => model.Email)

  @Html.LabelFor(model => model.Service)
  @Html.DropDownListFor(model => model.Service, new SelectList(new[] { "Short Haircut", "Long Haircut", "Coloring", "Perming" }))

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add a new client" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>